{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off",
				"noExplicitAny": "warn"
			}
		}
	},
	"files": {
		"ignore": ["node_modules/", "dist/", "lib/", "source/", "data/", ".vscode", "**/*.json"]
	}
}
